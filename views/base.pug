doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
        title ChaeTube
    body 
        header 
            nav
                ul
                    li 
                        a(href="/") Home
                    if loggedIn
                        li
                            a(href="/user/logout") Logout
                        li 
                            a(href="/user/profile") #{loggedInUser.username}의 프로필

                    else
                        li 
                            a(href="/login") Login
                        li 
                            a(href="/join") Join
                    li 
                        a(href="/video/upload") Upload
                    li 
                        a(href="/video/record") Record
                    
        block content
        block scripts
            script(src="/assets/js/main.js")